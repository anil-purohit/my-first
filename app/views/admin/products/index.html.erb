<p id="notice"><%= notice %></p>

<h3>All Products in Pick It Now</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Categoy</th>
      <th>Mrp</th>
      <th>Offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= admin_product.name %></td>
        <td><%= admin_product.image %></td>
        <td><%= admin_product.categoy %></td>
        <td><%= admin_product.mrp %></td>
        <td><%= admin_product.offer %></td>
        <td><%= link_to 'Show', admin_product, :class => "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_admin_product_path(admin_product), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_product, method: :delete, data: { confirm: "Are you sure you want to delete #{admin_product.name}?" }, :class => "btn btn-primary btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, :class => "btn btn-primary" %>
